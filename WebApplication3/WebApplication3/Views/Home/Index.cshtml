@model IEnumerable<Employee>
@{
    //Layout = "~/Views/shared/_Layout.cshtml";
    ViewBag.Title = " Employee List";

}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photopath = "~/Images/" + (employee.PhotoPath ?? "smile.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%; ">
            <div class="card-header">
                <h3> @employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" />
            <div class="card-footer text-center">

                <a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId" class="btn btn-primary m-1">View</a>
                <a asp-action="edit" asp-controller="Home" asp-route-id="@employee.id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>

    }
</div>

